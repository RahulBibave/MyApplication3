<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EAEAEA"
        tools:context=".ActivityFormView">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
    <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewIMg"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/lllllllllll"
            android:layout_below="@+id/recyclerViewIMg"
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="vertical"
             android:layout_height="wrap_content">
        <EditText
                android:visibility="gone"
                android:id="@+id/edtNote"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:hint="Enter Note"
                android:maxLines="5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    <Button
            android:layout_marginTop="15dp"
            android:background="@drawable/button_bg"
            android:layout_gravity="center"
            android:onClick="buApprove"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/btnAppr"
            android:text="approve"
            android:textColor="#FFFFFF"
            android:layout_width="200dp"
            android:layout_marginBottom="10dp"
            android:layout_height="60dp"/>
    </LinearLayout>



    <android.support.v7.widget.CardView
            android:id="@+id/linearLay"
            android:layout_margin="10dp"
            android:elevation="5dp"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_below="@+id/lllllllllll"
            android:layout_height="wrap_content">
    <LinearLayout

            android:layout_alignParentBottom="true"
            android:layout_marginBottom="3dp"
            android:padding="5dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:elevation="5dp"
            android:layout_height="wrap_content">


        <TableLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TableRow>
                <TextView
                        android:layout_weight="1"
                        android:layout_column="1"
                        android:textSize="18dp"
                        android:text=" Role  "
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_weight="1"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:text="Status"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
            </TableRow>
            <TableRow>
                <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:layout_column="1"
                        android:textSize="14dp"
                        android:text=" Manager   "
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textSize="14dp"
                        android:id="@+id/txtRqube"
                        android:text=""
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
            </TableRow>
            <View
                    android:layout_marginTop="5dp"
                    android:background="@color/gray"
                    android:layout_height="1dp"
                    android:layout_width="match_parent"/>
            <TableRow>
                <TextView
                       android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:layout_column="1"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"

                        android:text=" Sales-Co-Ordinator "
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_weight="1"
                        android:textSize="14dp"
                        android:id="@+id/txtProject"
                        android:gravity="center"
                        android:text=""
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
            </TableRow>

            <View
                    android:layout_marginTop="5dp"
                android:background="@color/gray"
                android:layout_height="1dp"
                android:layout_width="match_parent"/>


            <TableRow>
                <TextView
                        android:layout_weight="1"
                        android:layout_column="1"
                        android:textSize="14dp"
                        android:layout_marginLeft="10dp"
                        android:text=" President   "
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                />

                <TextView
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textSize="14dp"
                        android:id="@+id/txtBuild"
                        android:text=""
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                />
            </TableRow>

            <View
                    android:visibility="gone"
                    android:background="@color/gray"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"/>
            <TableRow>
                <TextView
                        android:visibility="gone"
                       android:layout_marginLeft="10dp"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text=" Backoffice   "
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:visibility="gone"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textSize="14dp"
                        android:id="@+id/txtBack"
                        android:text=""
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
            </TableRow>

        </TableLayout>























    </LinearLayout>


    </android.support.v7.widget.CardView>
        <LinearLayout


                android:layout_below="@+id/linearLay"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:layout_marginRight="15dp"
                      android:layout_height="wrap_content">

        <LinearLayout
                android:id="@+id/lin_note_man"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
           <TextView
                   android:id="@+id/txtMannote"
                   android:textSize="20dp"
                   android:text="Manager Note"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/txtMan"
                    android:padding="5dp"
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
            <LinearLayout
                    android:id="@+id/lin_note_sale"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/txtNoteSale"
                        android:textSize="20dp"
                        android:text="Sales Coordinator Note"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/txtSales"
                        android:padding="5dp"
                        android:text=""
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>



    </RelativeLayout>
</ScrollView>