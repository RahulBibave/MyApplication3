<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".MainActivity">

    <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <LinearLayout
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Rqube Id"/>
    <EditText
            android:id="@+id/edtRqube"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittext_boarder"
            android:elevation="5dp"
            android:textSize="20dp"
            android:inputType="number"
            android:singleLine="true"
            android:hint="Rqube Id"
            android:imeOptions="actionDone"
            android:textColor="@color/black"
            android:textColorHint="#5d5d5d"
            android:drawablePadding="15dp"
            android:gravity="center"


    />

    <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Project"/>
    <TextView
            android:background="@drawable/edittext_boarder"
            android:id="@+id/txtProject"
            android:textColor="#000000"
            android:textSize="18dp"
            android:hint="Project"
            android:gravity="center"
            android:paddingRight="10dp"
            android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
            android:elevation="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

    <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Building"/>
    <TextView
            android:background="@drawable/edittext_boarder"
            android:id="@+id/txtBuiding"
            android:textColor="#000000"
            android:textSize="18dp"
            android:hint="Building"
            android:gravity="center"
            android:paddingRight="10dp"
            android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
            android:elevation="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

    <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Flat No"/>
    <EditText
            android:id="@+id/edtFlatNo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittext_boarder"
            android:elevation="5dp"
            android:textSize="20dp"
            android:inputType="number"
            android:singleLine="true"
            android:hint="Flat No"
            android:imeOptions="actionDone"
            android:textColor="@color/black"
            android:textColorHint="#5d5d5d"
            android:drawablePadding="15dp"
            android:gravity="center"

    />

    <CheckBox
            android:id="@+id/checkbox"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Channel Partner"
            android:layout_width="wrap_content"
            android:layout_marginBottom="10dp"
              android:layout_height="wrap_content"/>

        <LinearLayout
                android:layout_below="@+id/scroll"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">
            <Button
                    android:background="@drawable/button_bg"
                    android:onClick="buNext"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

      <!--  <LinearLayout
                android:layout_below="@+id/scroll"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">
            <Button
                    android:onClick="buNext"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>-->
    </ScrollView>


</RelativeLayout>
