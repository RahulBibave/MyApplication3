<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity_UploadImages">

    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="match_parent">

    <LinearLayout
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


     <LinearLayout
             android:padding="10dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
         <LinearLayout
                 android:layout_marginRight="5dp"
                 android:background="@drawable/border_for_linear_layout"
                 android:gravity="center"
                 android:layout_gravity="center"
                 android:orientation="vertical"
                 android:layout_weight="1"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content">

         <ImageView
                 android:scaleType="fitXY"
                 android:id="@+id/imgFront"
                 android:layout_weight="1"
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/height_image_view"
                 android:src="@drawable/ic_camera_alt_black_24dp"/>
             <TextView
                     android:layout_marginBottom="5dp"
                     android:textSize="18dp"
                     android:text="Front Form"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>
         </LinearLayout>
         <LinearLayout
                 android:layout_marginLeft="5dp"
                 android:layout_marginRight="5dp"
                 android:background="@drawable/border_for_linear_layout"
                 android:gravity="center"
                 android:layout_gravity="center"
                 android:orientation="vertical"
                 android:layout_weight="1"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content">
         <ImageView
                 android:scaleType="fitXY"
                 android:id="@+id/imgBack"
                 android:layout_weight="1"
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/height_image_view"
                android:src="@drawable/ic_camera_alt_black_24dp"/>
             <TextView
                     android:layout_marginBottom="5dp"
                     android:textSize="18dp"
                     android:text="Back Form"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>
         </LinearLayout>
         <LinearLayout
                 android:layout_marginLeft="5dp"
                 android:background="@drawable/border_for_linear_layout"
                 android:gravity="center"
                 android:layout_gravity="center"
                 android:orientation="vertical"
                 android:layout_weight="1"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content">
             <ImageView
                     android:scaleType="fitXY"
                     android:id="@+id/imgCheck"
                     android:layout_width="match_parent"
                     android:layout_height="@dimen/height_image_view"
                     android:src="@drawable/ic_camera_alt_black_24dp"/>

             <TextView
                     android:layout_marginBottom="5dp"
                     android:textSize="18dp"
                     android:text="Cheque"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>
         </LinearLayout>
     </LinearLayout>


        <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



            <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/border_for_linear_layout"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
            <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/imgAadar"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_image_view"
                    android:src="@drawable/ic_camera_alt_black_24dp"/>
                <TextView
                        android:layout_marginBottom="5dp"
                        android:textSize="18dp"
                        android:text="Aadhar Card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/border_for_linear_layout"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                <ImageView
                        android:scaleType="fitXY"
                        android:id="@+id/imgAadar2"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_image_view"
                        android:src="@drawable/ic_camera_alt_black_24dp"/>
                <TextView
                        android:layout_marginBottom="5dp"
                        android:textSize="18dp"
                        android:text="Aadhar Card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/border_for_linear_layout"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                <ImageView
                        android:scaleType="fitXY"
                        android:id="@+id/imgPan"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_image_view"
                        android:src="@drawable/ic_camera_alt_black_24dp"/>
                <TextView
                        android:layout_marginBottom="5dp"
                        android:textSize="18dp"
                        android:text="Pan Card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



            <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/border_for_linear_layout"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                <ImageView
                        android:scaleType="fitXY"
                        android:id="@+id/imgOpt1"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_image_view"
                        android:src="@drawable/ic_camera_alt_black_24dp"/>
                <TextView
                        android:layout_marginBottom="5dp"
                        android:textSize="18dp"
                        android:text="Optional"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/border_for_linear_layout"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                <ImageView
                        android:scaleType="fitXY"
                        android:id="@+id/imgOpt2"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_image_view"
                        android:src="@drawable/ic_camera_alt_black_24dp"/>
                <TextView
                        android:layout_marginBottom="5dp"
                        android:textSize="18dp"
                        android:text="Optional"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/border_for_linear_layout"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                <ImageView
                        android:scaleType="fitXY"
                        android:id="@+id/imgEnq"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_image_view"
                        android:src="@drawable/ic_camera_alt_black_24dp"/>
                <TextView
                        android:layout_marginBottom="5dp"
                        android:textSize="18dp"
                        android:text="Enquiry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
                android:id="@+id/linearCp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <LinearLayout


                    android:layout_marginLeft="5dp"
                    android:background="@drawable/border_for_linear_layout"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
            <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/imgCP"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_image_view"
                    android:src="@drawable/ic_camera_alt_black_24dp"/>
                <TextView
                        android:layout_marginBottom="5dp"
                        android:textSize="18dp"
                        android:text="Chennal Partner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/linearCp1"

                    android:layout_marginLeft="5dp"
                    android:background="@drawable/border_for_linear_layout"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                <ImageView
                        android:scaleType="fitXY"
                        android:id="@+id/imgCP1"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_image_view"
                        android:src="@drawable/ic_camera_alt_black_24dp"/>
                <TextView
                        android:layout_marginBottom="5dp"
                        android:textSize="18dp"
                        android:text="Chennal Partner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <Button
                android:layout_marginTop="15dp"
                android:background="@drawable/button_bg"
                android:onClick="buSubmit"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_alignParentBottom="true"
                android:text="Submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>

        <ProgressBar
                android:id="@+id/progressBar"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp"
        />
    </FrameLayout>














</ScrollView>













































































